<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingRight="16dp"
    android:paddingLeft="16dp"
    tools:context=".ui.home.HomeFragment">


    <TextView
        android:id="@+id/text_home"
        android:layout_width="98dp"
        android:layout_height="19dp"
        android:text="Home"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

    <ImageView
        android:layout_width="411dp"
        android:layout_height="217dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/oleh_1"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="-16dp"
        tools:layout_editor_absoluteY="27dp" />

    <LinearLayout
        android:layout_width="415dp"
        android:layout_height="618dp"
        android:layout_marginTop="4dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="-20dp">

        <LinearLayout
            android:layout_width="400dp"
            android:layout_height="116dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="Selamat Datang di Toko Online Toko Oleh-Oleh"
                android:textSize="18dp"
                android:textStyle="bold"></TextView>

            <TextView
                android:layout_width="368dp"
                android:layout_height="29dp"
                android:layout_marginLeft="15dp"
                android:text="Belanja oleh-oleh dengan murah, mudah dan cepat"
                android:textSize="12dp"
                android:textStyle="normal"></TextView>

            <Button
                android:id="@+id/btnbelanja"
                style="@style/CardView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="15dp"
                android:text="Belanja sekarang!"
                app:backgroundTint="@color/teal_700" />

        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
